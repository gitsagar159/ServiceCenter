<div class="modal fade" id="billnodetail_modal">
    <div class="modal-dialog">
        <form class="modal-content" id="frmBillNoDetail" name="frmBillNoDetail">
            <div class="modal-header">
                <h5 class="modal-title">
                    Customer Master
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">×</button>
            </div>
            <div class="modal-body">

                <div class="form-row">
                    <div class="form-group col mb-0">
                        <label class="form-label">Bill No</label>
                        <input type="text" class="form-control control-required" id="BillNo" name="BillNo" placeholder="Bill No" style="text-transform:uppercase">
                        <small id="BillNo_ToolTip" class="" style="display:none">Enter Bill No</small>
                    </div>
                    <div class="form-group col mb-0">
                        <label class="form-label">Bill Date</label>
                        <input type="text" class="form-control control-required datepicker-features" id="BillDate" name="BillDate" placeholder="Bill Date">
                        <small id="BillDate_ToolTip" class="" style="display:none">Enter Bill Date</small>
                    </div>
                </div>



                <hr class="mb-3" />

                <table class="table table-responsive" id="tblBillNoDetail" style="display:none">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Customer Name</th>
                            <th>Mobile No</th>
                            <th>Item Name</th>
                            <th>Sr No</th>
                        </tr>
                    </thead>

                    <tbody>
                    </tbody>

                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="return GetBillDetailByBillNoAndDate()">Search</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </form>

    </div>
</div>